{% extends 'base.html.twig' %}

{% block title %}
Liste des éléments
{% endblock %}

{% block content %}
<div class="d-flex relative m-1 p-2 p-300">
    <div>
        <label for="elements-search" class="fw-bold fs-4">Éléments recherchés</label>
    </div>
    <div>
        <input type="search" id="elements-search" class="rounded" placeholder="Rechercher..." />
        <button id="search-button">Search</button>
    </div>
</div>

<div id="Grille" class="Grille d-flex justify-content-center flex-wrap gap-5">
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const container = document.getElementById('Grille');
        const searchInput = document.getElementById('elements-search');

        const items = [
            { name: "Salle 1", description: "Description de la salle 1", image: "/Assets/ordi.jpg" },
            { name: "Salle 2", description: "Description de la salle 2", image: "/Assets/ordi2.jpg" },
            { name: "Salle 3", description: "Description de la salle 3", image: "/Assets/ordi.jpg" },
            { name: "Salle 4", description: "Description de la salle 4", image: "/Assets/ordi2.jpg" },
            { name: "Salle 5", description: "Description de la salle 5", image: "/Assets/ordi.jpg" },
        ];

        const displayItems = (filteredItems) => {
            container.innerHTML = ""; 
            filteredItems.forEach(item => {
                container.innerHTML += `
                    <div class="border rounded bg-light text-center w-35 h-50 d-flex align-items-center justify-content-center">
                        <img src="${item.image}" alt="${item.name}" class="img-fluid w-50" />
                        <p>${item.name} <br> ${item.description}</p>
                    </div>
                `;
            });
        };

        displayItems(items);

        searchInput.addEventListener('input', () => {
            const searchTerm = searchInput.value;
            const filteredItems = items.filter(item => 
                item.name.includes(searchTerm) || 
                item.description.includes(searchTerm) ||
                item.image.includes(searchTerm)
            );
            displayItems(filteredItems); 
        });
    });
</script>
{% endblock %}
