{% extends 'base.html.twig' %}

{% block title %}
Ajouter ItemsForm

{% endblock %}

{% block content %}
    <title>Ajouter un Produit</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #2e2e2e;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #3c3c3c;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        h1 {
            text-align: center;
            color: #a150d5;
        }

        label {
            font-weight: bold;
            margin-bottom: 10px;
        }

        input[type="text"], input[type="file"], textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0 20px;
            border: 1px solid #5c4b8b;
            border-radius: 4px;
            background-color: #2e2e2e;
            color: #fff;
        }

        button {
            background-color: #a150d5;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

        button:hover {
            background-color: #7e39a0;
        }

        .error {
            color: red;
        }

        .success {
            color: green;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Ajouter un Produit</h1>

        <!-- Affichage des erreurs de validation -->
        {% if validation %}
            <ul class="error">
                {% for error in validation.getErrors() %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action="{{ base_url('/blog/store') }}" method="post" enctype="multipart/form-data">
            <div>
                <label for="nom">Nom du produit</label>
                <input type="text" name="nom" id="nom" value="{{ old('nom') }}" required>
            </div>

            <div>
                <label for="adescription">Description</label>
                <textarea name="adescription" id="adescription" rows="4" required>{{ old('adescription') }}</textarea>
            </div>

            <div>
                <label for="localisation">Localisation</label>
                <input type="text" name="localisation" id="localisation" value="{{ old('localisation') }}" required>
            </div>

            <div>
                <label for="typeMateriel">Type de mat√©riel</label>
                <input type="text" name="typeMateriel" id="typeMateriel" value="{{ old('typeMateriel') }}" required>
            </div>

            <div>
                <label for="image">Image</label>
                <input type="file" name="image" id="image" accept="image/*" required>
            </div>

            <button type="submit">Ajouter le produit</button>
        </form>
    </div>

</body>
{% endblock %}
